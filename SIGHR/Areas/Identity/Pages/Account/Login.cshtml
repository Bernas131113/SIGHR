@page
@model SIGHR.Models.LoginModel
@{
    Layout = null; // Opcional: ou "_Layout" se quiseres manter a navbar
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AllRestore Area Reservada</title>
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <!-- Main Content -->
    <div class="container">

        <div id="registo-ponto-area">
            <div class="flex-center">
                <button class="btn btn-blue">Pedir Material</button>
                <button class="btn btn-blue">Registar Falta</button>
            </div>

            <h1>Registar Entrada/Saída</h1>
            <form method="post">
                <div class="form-group">
                    <label for="userName">Nome de Utilizador</label>
                    <input id="userName" name="UserName" type="text" class="obra-input" placeholder="Nome de utilizador" required />
                    <span class="text-danger" id="userNameError"></span>
                </div>

                <div class="form-group">
                    <label for="pin">PIN</label>
                    <input id="pin" name="PIN" type="password" class="obra-input" placeholder="PIN" required />
                    <span class="text-danger" id="pinError"></span>
                </div>

                <div class="flex-center">
                    <button type="button" class="btn btn-green">Entrar</button>
                    <button type="button" class="btn btn-red">Sair P/Almoço</button>
                    <button type="button" class="btn btn-green">Entrar P/Trabalho</button>
                    <button type="button" class="btn btn-red">Sair</button>
                </div>

                <div id="loading-message" style="display: none;">
                    A carregar...
                </div>
                <div id="mensagem-sucesso" class="mensagem-sucesso">
                    Registo realizado com sucesso!
                </div>
            </form>
        </div>
    </div>

    <script src="script.js"></script>
</body>
</html>
