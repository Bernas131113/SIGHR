// appsettings.json
{
  "ConnectionStrings": {
    // Esta é a connection string que queremos usar para SIGHRContext
    "SIGHRContextConnection": "Server=(localdb)\\mssqllocaldb;Database=SIGHR;Trusted_Connection=True;MultipleActiveResultSets=true",

    // Esta connection string para 'SIGHRDb' não será usada pelo SIGHRContext se seguirmos os passos.
    // Você pode mantê-la se for usada por outra parte da aplicação, ou removê-la para evitar confusão.
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=SIGHRDb;Trusted_Connection=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}