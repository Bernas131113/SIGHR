@{
    ViewData["Title"] = "Painel do Administrador - Registo de Entradas"; // Título mais específico
    Layout = "_LayoutAdmin"; // Especifica o layout
}

@* O conteúdo da tag <main> do _LayoutAdmin.cshtml será substituído por isto: *@

<style>
    thead th {
        color: black; /* Ou #000000 */
    }


</style>

<h1>Área de Administração</h1> @* Pode ser redundante se o layout já tiver um título geral *@
<div class="content">
    <div class="header">
        <h2>Registo de Entradas</h2>
        <div class="action-buttons">
            <button onclick="downloadExcel()" class="download-btn">Download Excel</button>
            <button id="editar-btn" class="edit-btn" onclick="habilitarEdicao()">Editar</button>
            <button id="concluir-btn" class="edit-btn" onclick="salvarEdicoes()" style="display: none;">Concluido</button>
            <button id="btn-excluir" class="delete-btn" onclick="ativarModoExclusao()">Excluir</button>
        </div>
    </div>

    <div class="search-bar">
        <input type="text" id="filtro-nome" placeholder="Pesquisar por nome">
        <input type="date" id="filtro-data" placeholder="Pesquisar por data (DD/MM/AAAA)">
        <button class="filter-btn" onclick="aplicarFiltros()">Filtrar</button>
    </div>
    <div class="table-container">
        <table id="tabela-horariosadmin" class="table admin-table">
            @* Adicionada classe 'admin-table' *@
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Data</th>
                    <th>Hora Entrada</th>
                    <th>Entrada Almoço</th>
                    <th>Saída Almoço</th>
                    <th>Hora Saída</th>
                    <th>Total De Horas</th>
                    <th>Localização</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section Scripts {
@* Se você tinha um <script src="script.js"></script> específico para esta página, coloque-o aqui *@
@* <script src="~/js/adminDashboardScript.js" asp-append-version="true"></script> *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.2/xlsx.full.min.js"></script> @* Mover scripts externos para o layout se forem comuns, ou para a seção Scripts se específicos *@
}